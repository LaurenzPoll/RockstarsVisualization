@{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.bundle.js"></script>
    <script th:inline="javascript" >
        /*<![CDATA[*/
            var jsonfile= @ViewBag.DataPoints
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: Object.keys(jsonfile.jsonarray.map(function(e){return e.x;});
                datasets: [{
                    data: Object.keys(jsonfile.jsonarray.map(function (e) {return e.y;}),
                    backgroundColor: [
                        'rgb(0,255,255)',
                        'rgb(46,139,87)',
                        'rgb(255,165,0)'
                    ],
                    borderColor: [
                        'rgb(0,255,255)',
                        'rgb(46,139,87)',
                        'rgb(255,165,0)'
                    ],
                    borderWidth: 1
                }]
            },
        });
        /*]]>*/
    </script>

}
