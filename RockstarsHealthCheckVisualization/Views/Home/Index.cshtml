@using Newtonsoft.Json;
@using RockstarsHealthCheckVisualization.Core.Charts;
@{
    ViewData["Title"] = "Home Page";
}

<script>
    window.onload = function () {

        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            title: {
                text: "Average answers"
            },
            axisY: {
                minimum: -2,
                maximum: 2,
                interval: 1
            },
            toolTip: {
                shared: true
            },
            data: [{
                type: "column",
                name: "Questions",
                dataPoints: @Html.Raw(ViewBag.DataPoints)
                        }]
        });
        chart.render();

        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            title: {
                text: "Average answers"
            },
            axisY: {
                minimum: -2,
                maximum: 2,
                interval: 1
            },
            toolTip: {
                shared: true
            },
            data: [{
                type: "column",
                name: "Questions",
                dataPoints: @Html.Raw(ViewBag.DataPoints)
                            }]
        });
        chart.render();
    }
</script>

<body onload="createAllPieCharts(@ViewBag.test)">
    <button onClick="window.location.reload();">Refresh Page</button>
    @for (int i = 0; i < ViewBag.Amount; i++)
    {
        <div id="chartContainer-@i" style="height: 370px; width: 100%;"></div>
    }
</body>