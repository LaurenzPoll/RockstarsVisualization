
<script>
    window.onload = function () {

        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            title: {
                text: "Average answers"
            },
            axisY: {
                minimum: -2,
                maximum: 2,
                interval: 1
            },
            toolTip: {
                shared: true
            },
            data: [{
                type: "column",
                name: "Questions",
                dataPoints: @Html.Raw(ViewBag.DataPoints)
                            }]
        });
        chart.render();
    }
</script>

<link rel="stylesheet" href="~/css/MailUrl.css" asp-append-version="true" />

<div class="FullScreenChards">
    <div class="BackgroundChard">
        <h1>Individual results</h1>
        <div id="chartContainer" style="height: 370px; width: 100%; margin-bottom: 20px;"></div>
    </div>
</div>

<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>