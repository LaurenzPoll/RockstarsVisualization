@using RockstarsHealthCheckVisualization.Models
@{
    ViewData["Title"] = "Individual";
}
@model UserCollectionViewModel

<center>
    <form method="post" asp-controller="Individual" asp-action="UserGraph">
        <select name="userID" id="userID">
            <option disabled selected> -- select an user -- </option>
                @foreach (UserViewModel user in Model.UserList)
                {
                    <input name="Name" type="hidden" value="@user.Name" />
                    <input name="UserID" type="hidden" value="@user.UserID" />
                    <input name="Email" type="hidden" value="@user.Email" />

                    <option value="@user.UserID">@user.Email</option>
                }
                <button type="submit">Select</button> 
    </form>
</center>
